@model IEnumerable<WebApplication5.Models.UserStory>

@{
    ViewBag.Title = "UserStoryList";
}

<h2>UserStoryList</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("UserStoryList", "UserStory", FormMethod.Get))
{
    <label>Owner:</label>
    @Html.TextBox("owner", ViewBag.FilterOwner as string)
    <input type="submit" value="Filter" />

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
}

@section scripts {
    <script>
        $(function () {
            $('form').submit(function (event) {
                event.preventDefault(); // sprečavanje podnošenja forme

                var owner = $('#owner').val(); // vrednost unosa

                $.ajax({
                    url: '@Url.Action("UserStoryList", "UserStory")',
                    type: 'GET',
                    data: { owner: owner },
                    success: function (result) {
                        $('table').html(result); // ažuriranje tabele
                    }
                });
            });
        });
    </script>
}
