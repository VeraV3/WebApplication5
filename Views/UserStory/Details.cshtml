@model IEnumerable<WebApplication5.Models.TaskViewModel>

@{
    ViewBag.Title = "Task list for this user story";
    var firstItem = Model.FirstOrDefault();
    var userStoryTitle = firstItem != null ? firstItem.UserStoryTitle : string.Empty;
    var owner = firstItem != null ? firstItem.Owner : string.Empty;
    var userStoryId = firstItem != null ? firstItem.userStoryId : 0;
}

<h2>Task list for user story named: @userStoryTitle</h2>
<h3>Owner: @owner</h3>

<p>
    @Html.ActionLink("Add new tasks for this user story", "AddTaskToUserStory", new {id = userStoryId }) 
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.task.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.task.Description)
        </th>
  
       
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.task.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.task.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Task", new { id = item.task.Id }, null)
                |
                @Html.ActionLink("Delete", "Delete", "Task", new { id = item.task.Id }, null)

            </td>
        </tr>
    }

</table>
